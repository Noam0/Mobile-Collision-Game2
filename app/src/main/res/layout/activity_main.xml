                android:id="@+id/MAIN_LBLCARD_FINALSCORE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="36sp"
                android:textStyle="bold"
                android:text="Final Score:"
                android:textAlignment="center"
                android:textColor="@color/menu_buttons_color" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cookie" />


    </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/MAIN_EDITTEXT_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Enter Your Name"
                android:textSize="25sp"
                android:textColor="@color/menu_buttons_color"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/MAIN_CARDVIEW_BTN_OK"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textSize="24sp"
                android:backgroundTint="@color/menu_buttons_color"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:text="OK"
                app:cornerRadius="10dp">

            </com.google.android.material.button.MaterialButton>


